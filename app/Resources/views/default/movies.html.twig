<!-- Features Section -->
<h2 class="pb-3 mb-4 font-italic border-bottom">Películas en estreno que debes ver</h2>
<div class="row" itemprop="video" itemscope itemtype="http://schema.org/VideoObject">
{% for movie in movies[:2] %}
    <div class="col-lg-6">
        <h2 itemprop="name">{{ movie.title }}</h2>
        <p itemprop="description" class="text-justify">{{ movie.sinopsis }}</p>
        <ul>
            <li>
                <strong>Fecha de estreno:</strong> {{ movie.release_date.date }}
                <meta itemprop="uploadDate" content="{{ movie.release_date.structured_format }}">
            </li>
            <li><strong>Clasificación:</strong> {{ movie.clasification }}</li>
            <li><strong>País:</strong> {{ movie.country }}</li>
            <li><strong>Reparto:</strong> {{ movie.reparto }}</li>
            <li><strong>Director:</strong> {{ movie.director }}</li>
            <li><strong>Género:</strong> {{ movie.genero }}</li>
            <li><strong>Idioma:</strong> {{ movie.idioma }}</li>
        </ul>
        <p></p>
        <div class="shadow-lg p-3 mb-5 bg-white rounded">
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" width="560" height="315" src="{{ movie.trailer }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
        </div>
        {{ include('ads/trailers.html.twig') }}
    </div>
    </div>
    
{% endfor %}
<!-- /.row -->
</div>
<hr />